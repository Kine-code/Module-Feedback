<odoo>
  <record id="view_survey_feedback_tree" model="ir.ui.view">
    <field name="name">survey.feedback.tree</field>
    <field name="model">survey.feedback</field>
    <field name="arch" type="xml">
      <tree>
        <field name="submitted_at"/>
        <field name="feedback"/>
        <field name="student_id"/>
        <field name="ctsv_group_id"/>
      </tree>
    </field>
  </record>

  <record id="view_survey_feedback_search" model="ir.ui.view">
    <field name="name">survey.feedback.search</field>
    <field name="model">survey.feedback</field>
    <field name="arch" type="xml">
      <search>
        <field name="feedback"/>
        <field name="ctsv_group_id"/>
        <field name="student_id"/>
        <filter name="today" string="Hôm nay" domain="[('submitted_at','&gt;=',context_today())]"/>
      </search>
    </field>
  </record>

  <record id="action_survey_feedback_dashboard" model="ir.actions.act_window">
    <field name="name">Dashboard Phản hồi</field>
    <field name="res_model">survey.feedback</field>
    <field name="view_mode">graph,pivot,tree</field>
    <field name="context">{}</field>
  </record>
</odoo>